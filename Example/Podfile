# Deployment Target
platform :ios, '8.0'

# Add pods as frameworks so we could add obj-c and swift 3.0 pods
use_frameworks!


target 'ObjectMapperAdditions_Example' do
    pod 'APExtensions'
    pod 'ObjectMapper'
    pod 'ObjectMapper+Realm'
    pod 'ObjectMapperAdditions', :path => '../'

    target 'ObjectMapperAdditions_Tests' do
        inherit! :search_paths

        pod 'Quick'
        pod 'Nimble'
    end
end


post_install do |installer|
    # TODO: Remove pods when they converted to Swift 4
    # Your list of targets here.
    myTargets = ['Quick', 'Nimble']
    
    installer.pods_project.targets.each do |target|
        if myTargets.include? target.name
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '3.2'
            end
        end
    end
end
